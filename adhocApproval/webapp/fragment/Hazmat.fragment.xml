<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:ui="sap.ui.table"
	xmlns:ExtPicker="com.incture.lch.adhocApproval.control">
	<Dialog title="{i18n>HAZMAT}" afterClose="onAfterCloseDlgHazmat" verticalScrolling="false"
		horizontalScrolling="false">
		<content>
			<l:Grid hSpacing="1" vSpacing="0" defaultSpan="XL12 L12 M12 S12" class="sapUiSmallMarginTopBottom">
				<VBox class="sapUiSmallMarginBegin">
					<Label design="Bold" text="{i18n>UN}"/>
					<Input value="{mCommon>/context/hazmatNumber}" maxLength="7" enabled="{mCommon>/context/isHazmat}" name="DETAIL_HAZMAT_NO_ID"/>
				</VBox>
			</l:Grid>
		</content>
		<endButton>
			<Button text="{i18n>OK}" press="onCloseDlgHazmat"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>