<mvc:View controllerName="com.incture.lch.Adhoc.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:tnt="sap.tnt"
	xmlns:core="sap.ui.core" xmlns:ExtListItem="com.incture.lch.Adhoc.control">
	<tnt:ToolPage id="idLch_adhoc_ToolPage" class=" sapUiSizeCompact" sideExpanded="false">
		<tnt:header>
			<tnt:ToolHeader class="customHeader">
				<Button class="sapCoreColor" icon="sap-icon://menu2" press="onSideNavigation" id="sideNavigationToggleButton">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer width="2rem">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToolbarSpacer>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent >
			<tnt:SideNavigation expanded="true" itemSelect="onISelMenu" class="sapTntToolBar" selectedKey="{mCommon>/selNavigationKey}" >
				<tnt:NavigationList class="sapTntToolBar">
					<tnt:NavigationListItem text="{i18n>CREATE_NEW_ORDER}" icon="sap-icon://create-form" key="kOrder"
						class="sapCustomNavListItemCount"/>
					<ExtListItem:ExtNavigationListItem text="{i18n>ORDER_HISTORY}" icon="sap-icon://history" key="kHistory"
						count="{mCommon>/iLenHistory}" class="sapTntToolBar"/>
					<tnt:NavigationListItem text="{i18n>MANAGE_APPROVALS}" icon="sap-icon://accept" key="kApprove"
						class="sapCustomNavListItemCount"/>
				</tnt:NavigationList>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="idLch_Adhoc_ToolPageContainer"></NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>