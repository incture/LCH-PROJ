<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:fb="sap.ui.comp.filterbar"
	xmlns:f="sap.f" controllerName="com.incture.lch.premfreightOrders.controller.Orderdetails" xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="false" xmlns:ui="sap.ui.table" xmlns:ExtPicker="com.incture.lch.premfreightOrders.control">
	<Page showHeader="false" enableScrolling="false" class="sapUiSizeCompact" id="OrderDetails">
		<content>
			<l:FixFlex>
				<l:fixContent>
					<HBox>
						<Label text="{i18n>PREMIUM_FREIGHT_ORDERS}" design="Bold" class="customTitle sapUiTinyMarginTop sapUiMediumMarginBegin"/>
					</HBox>
					<fb:FilterBar reset="onReset" search="fnPremfreightstable" id="lch_UnPlannedOrders_filterBar" class="sapFbfilterbar"
						showFilterConfiguration="false" showClearOnFB="true" clear="onClearFilter">
						<fb:filterGroupItems>
							<fb:FilterGroupItem name="Ship_From" label="{i18n>SHIP_FROM}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ComboBox selectedKey="{mCommon>/originFilter}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
										items="{path: 'mCommon>/aOrigin',sorter:{ path:'originName'}}" change="onChangeOrigin">
										<core:ListItem key="{mCommon>originName}" text="{mCommon>originName}" tooltip="{mCommon>originName}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="Ship_To" label="{i18n>SHIP_TO}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ComboBox selectedKey="{mCommon>/destinationFilter}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
										items="{path: 'mCommon>/aOrigin',sorter:{ path:'originName'}, tooltip:{path:'originName'}}" change="onChangeDestination">
										<core:ListItem key="{mCommon>originName}" text="{mCommon>originName}" tooltip="{mCommon>originName}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="From_Date" label="{i18n>FROM_DATE}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ExtPicker:ExtDatePicker class="sapUiMInputBoxBorderRadius" placeholder=" " dateValue="{mCommon>/fromDateFilter}"
										displayFormat="yyyy MMM dd"/>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="To_Date" label="{i18n>TO_DATE}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ExtPicker:ExtDatePicker class="sapUiMInputBoxBorderRadius" placeholder=" " dateValue="{mCommon>/toDateFilter}" displayFormat="yyyy MMM dd"/>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="status" label="{i18n>STATUS}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ComboBox selectedKey="{mCommon>/statusFilter}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
										items="{path: 'mCommon>/aStatus'}" change="onChangeCBox">
										<core:ListItem key="{mCommon>status}" text="{mCommon>status}" tooltip="{mCommon>status}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="reasonCode" label="{i18n>REASON_CODE}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ComboBox selectedKey="{mCommon>/reasonCodeFilter}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
										items="{path: 'mCommon>/aReasonCodes'}" change="onChangeCBox">
										<core:ListItem key="{mCommon>key}" text="{mCommon>key}" tooltip="{mCommon>key}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
						</fb:filterGroupItems>
					</fb:FilterBar>
				</l:fixContent>
				<l:flexContent>
					<!--	<core:Fragment fragmentName="com.incture.lch.premfreightOrders.fragment.FreightUnitsTable" type="XML"/>-->
					<ui:Table id="premfreightstable" rows="{mCommon>/aPremfreightorders}" visibleRowCountMode="Fixed" alternateRowColors="true"
						enableColumnReordering="false" class="sapUiMediumMarginBegin sapUiSmallMarginEnd sapUiTableNoColBorders" selectionMode="Single"
						selectionBehavior="RowOnly">
						<ui:columns>
							<ui:Column tooltip="{i18n>ORDER_ID}" width="10rem">
								<Label text="{i18n>ORDER_ID}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>orderId}" tooltip="{mCommon>orderId}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>REASON_CODE}">
								<Label text="{i18n>REASON_CODE}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>reasonCode}" tooltip="{mCommon>reasonCode}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>ORIGIN_NAME}">
								<Label text="{i18n>ORIGIN_NAME}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>originName}" tooltip="{mCommon>originName}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>DESTINATION_NAME}">
								<Label text="{i18n>DESTINATION_NAME}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>destinationName}" tooltip="{mCommon>destinationName}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>CREATED_DATE}" visible="{mCommon>/visible/createdDate}">
								<Label text="{i18n>CREATED_DATE}" design="Bold"/>
								<ui:template>
									<Text maxLines="1"
										text="{path:'mCommon>createdDate', type:'sap.ui.model.type.DateTime', formatOptions: {source: { pattern: 'yyyy-MM-dd HH:mm:ss' },pattern: 'dd MMM yyyy', strictParsing: true}}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>STATUS}">
								<Label text="{i18n>STATUS}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>status}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>CARRIER}" hAlign="Begin" visible="{mCommon>/visible/carrierCombo}">
								<Label text="{i18n>CARRIER}" design="Bold"/>
								<ui:template>
									<ComboBox selectedKey="{mCommon>selectedCarrier}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="true" filterSecondaryValues="true"
										items="{path: 'mCommon>/aCarrierdetails'}" change="onChangeCarrier" valueState="{mCommon>/valstate/carrier}"
										enabled="{mCommon>enablecarrier}">
										<core:ListItem key="{mCommon>bpNumber}" text="{mCommon>bpNumber}" additionalText="{mCommon>carrierDetails}"
											tooltip="{mCommon>carrierDetails}"/>
									</ComboBox>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>CARRIER}" hAlign="Begin" visible="{mCommon>/visible/carrierText}">
								<Label text="{i18n>CARRIER}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>bpNumber}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>CARRIER_MODE}" hAlign="Begin" visible="{mCommon>/visible/carrierCombo}">
								<Label text="{i18n>CARRIER_MODE}" design="Bold"/>
								<ui:template>
									<ComboBox selectedKey="{mCommon>selectedCarriermode}" value="{mCommon>selectedCarriermode}" class="sapUiMInputBoxBorderRadius"
										showSecondaryValues="false" items="{path: 'mCommon>/aCarriermodes'}" enabled="{mCommon>enablecarriermode}">
										<core:ListItem key="{mCommon>mode}" text="{mCommon>mode}" tooltip="{mCommon>mode}"/>
									</ComboBox>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>CARRIER_MODE}" hAlign="Begin" visible="{mCommon>/visible/carrierText}">
								<Label text="{i18n>CARRIER_MODE}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>carrierMode}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>CARRIER_SCAC}" visible="{mCommon>/visible/carrierScac}">
								<Label text="{i18n>CARRIER_SCAC}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>carrierScac}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>CARRIER_DETAILS}" visible="{mCommon>/visible/carrierDetails}">
								<Label text="{i18n>CARRIER_DETAILS}" design="Bold"/>
								<ui:template>
									<Text maxLines="1" text="{mCommon>carrierDetails}"/>
								</ui:template>
							</ui:Column>
							<ui:Column tooltip="{i18n>COST}">
								<Label text="{i18n>COST}" design="Bold"/>
								<ui:template>
									<Input value="{mCommon>charge}" enabled="{mCommon>/enable/costInput}"></Input>
								</ui:template>
							</ui:Column>
							<!--	<ui:Column tooltip="{i18n>ACTION}">
								<Label text="{i18n>ACTION}" design="Bold"/>
								<ui:template>
									<Label text="sample"/>
									<Button icon="sap-icon://overflow" class="sapUiSmallMargin" press="onButtonPress">
										<dependents>
											<ActionSheet id="actionSheet"
												title="Choose Your Action" showCancelButton="true" placement="Bottom">
												<Button text="Accept" icon="sap-icon://accept"/>
												<Button text="Reject" icon="sap-icon://decline"/>
												<Button text="Email" icon="sap-icon://email"/>
												<Button text="Forward" icon="sap-icon://forward"/>
												<Button text="Delete" icon="sap-icon://delete"/>
												<Button text="Other"/>
											</ActionSheet>
										</dependents>
									</Button>
								</ui:template>
							</ui:Column>-->
						</ui:columns>
					</ui:Table>
				</l:flexContent>
			</l:FixFlex>
		</content>
		<footer>
			<OverflowToolbar class="customFooter">
				<ToolbarSpacer width="2rem">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToolbarSpacer>
				<Button text="{i18n>REJECT}" type="Reject" press="onApprove('Rejected')" visible="{mCommon>/visible/bApprove}"
					enabled="{mCommon>/enable/bApprove}"/>
				<Button text="{i18n>Approve}" type="Accept" press="onApprove('Approved')" visible="{mCommon>/visible/bApprove}"
					enabled="{mCommon>/enable/bApprove}"/>
				<Button text="{i18n>REJECT}" type="Reject" press="onReject" visible="{mCommon>/visible/bReject}" enabled="{mCommon>/enable/bReject}"/>
				<Button text="{i18n>FORW_MANAGER}" type="Emphasized" press="onForwardtoManager" visible="{mCommon>/visible/bGetcost}"
					enabled="{mCommon>/enable/bGetcost}"/>
				<Button text="{i18n>FORW_TO_CA}" type="Emphasized" press="onForwardtoCA" visible="{mCommon>/visible/bGetcost}"
					enabled="{mCommon>/enable/bGetcost}"/>
				<Button text="{i18n>FORW_PLANNER}" type="Emphasized" press="onForwardtoPlanner" visible="{mCommon>/visible/bSetcost}"
					enabled="{mCommon>/enable/bSetcost}"/>
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow"/>
				</layoutData>
				<ToolbarSpacer/>
				<ToolbarSpacer/>
				<HBox id="pagination">
					<Button id="firstPage" press="fnPagination(1)" tooltip="{i18n>FIRST_PAGE}" icon="sap-icon://close-command-field"
						enabled="{mCommon>/enable/firstPage}" visible="true"></Button>
					<Button enabled="{mCommon>/enable/previousPage}" id="previousPage" class="btnPrev" press="fnPagination(2)" tooltip="{i18n>PREV_PAGE}"
						icon="sap-icon://navigation-left-arrow" visible="true"></Button>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
					<Input textAlign="Center" width="3rem" value="{mCommon>/pageNo}" enabled="true" class="paginationText"/>
					<Button enabled="true" id="jumpPage" class="btnMargin" press="fnPagination(5)" tooltip="{i18n>GO_TO}" icon="sap-icon://forward"
						visible="true"></Button>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
					<Button enabled="{mCommon>/enable/nextPage}" id="nextPage" class="btnPrev" press="fnPagination(3)" tooltip="{i18n>NEXT_PAGE}"
						icon="sap-icon://navigation-right-arrow" visible="true"></Button>
					<Button enabled="{mCommon>/enable/lastPage}" id="lastPage" class="btnPrev" press="fnPagination(4)" tooltip="{i18n>LAST_PAGE}"
						icon="sap-icon://open-command-field" visible="true"></Button>
				</HBox>
				<ToolbarSpacer width="2rem">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToolbarSpacer>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>