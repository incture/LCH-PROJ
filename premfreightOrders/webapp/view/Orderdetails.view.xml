<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:fb="sap.ui.comp.filterbar"
	xmlns:f="sap.f" controllerName="com.incture.lch.premfreightOrders.controller.Orderdetails" xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="false" xmlns:ui="sap.ui.table" xmlns:ExtPicker="com.incture.lch.premfreightOrders.control">
	<Page showHeader="false" enableScrolling="false" class="sapUiSizeCompact">
		<content>
			<l:FixFlex>
				<l:fixContent>
					<Label text="{i18n>PREMIUM_FREIGHT_ORDERS}" design="Bold" class="customTitle sapUiTinyMarginTop sapUiMediumMarginBegin"/>
					<fb:FilterBar reset="onReset" search="onSearch(1)" id="lch_UnPlannedOrders_filterBar" class="sapFbfilterbar" showFilterConfiguration="false"
						showClearOnFB="true" clear="onClearFilter">
						<fb:filterGroupItems>
							<fb:FilterGroupItem name="Ship_From" label="{i18n>SHIP_FROM}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ComboBox selectedKey="{mCommon>/originFilter}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
										items="{path: 'mCommon>/aOrigin',sorter:{ path:'originName'}}" change="onChangeOrigin">
										<core:ListItem key="{mCommon>originName}" text="{mCommon>originName}" tooltip="{mCommon>originName}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="Ship_To" label="{i18n>SHIP_TO}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ComboBox selectedKey="{mCommon>/destinationFilter}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
										items="{path: 'mCommon>/aOrigin',sorter:{ path:'originName'}, tooltip:{path:'originName'}}" change="onChangeDestination">
										<core:ListItem key="{mCommon>originName}" text="{mCommon>originName}" tooltip="{mCommon>originName}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="From_Date" label="{i18n>FROM_DATE}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ExtPicker:ExtDatePicker class="sapUiMInputBoxBorderRadius" placeholder=" " dateValue="{mCommon>/fromDateFilter}"
										displayFormat="dd MMM yyyy"/>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="To_Date" label="{i18n>TO_DATE}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ExtPicker:ExtDatePicker class="sapUiMInputBoxBorderRadius" placeholder=" " dateValue="{mCommon>/toDateFilter}" displayFormat="dd MMM yyyy"/>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="status" label="{i18n>STATUS}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ComboBox selectedKey="{mCommon>/statusFilter}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
										items="{path: 'mCommon>/aStatus'}" change="onChangeCBox">
										<core:ListItem key="{mCommon>status}" text="{mCommon>status}" tooltip="{mCommon>status}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem name="reasonCode" label="{i18n>REASON_CODE}" class="sapUiSmallMarginBegin" groupName="G1" visibleInFilterBar="true">
								<fb:control>
									<ComboBox selectedKey="{mCommon>/reasonCodeFilter}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
										items="{path: 'mCommon>/aReasonCodes'}" change="onChangeCBox">
										<core:ListItem key="{mCommon>key}" text="{mCommon>key}" tooltip="{mCommon>key}"/>
									</ComboBox>
								</fb:control>
							</fb:FilterGroupItem>
						</fb:filterGroupItems>
					</fb:FilterBar>
				</l:fixContent>
				<l:flexContent>
					<core:Fragment fragmentName="com.incture.lch.premfreightOrders.fragment.FrieghtUnitsTable" type="XML"/>
				</l:flexContent>
			</l:FixFlex>
		</content>
		<footer>
			<OverflowToolbar class="customFooter">
				<ToolbarSpacer width="2rem">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToolbarSpacer>
				<Button text="{i18n>GET_COST}" type="Emphasized" icon="sap-icon://lead" iconFirst="true" press="onGetCost"/>
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow"/>
				</layoutData>
				<ToolbarSpacer/>
				<HBox>
					<Button enabled="true" id="firstPage" press="fnPagination(1)" tooltip="{i18n>FIRST_PAGE}" icon="sap-icon://close-command-field" visible="true"></Button>
					<Button enabled="true" id="previousPage" class="btnPrev" press="fnPagination(2)"  tooltip="{i18n>PREV_PAGE}" icon="sap-icon://navigation-left-arrow" visible="true"></Button>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
					<Input textAlign="Center" width="3rem" value="{mCommon>/pageNo}" enabled="true" class="paginationText"/>
					<Button enabled="true" id="jumpPage" class="btnMargin" press="fnPagination(5)" tooltip="{i18n>GO_TO}" icon="sap-icon://forward" visible="true"></Button>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
					<Button enabled="true" id="nextPage" class="btnPrev" press="fnPagination(3)" tooltip="{i18n>NEXT_PAGE}" icon="sap-icon://navigation-right-arrow" visible="true"></Button>
					<Button enabled="true" id="lastPage" class="btnPrev" press="fnPagination(4)" tooltip="{i18n>LAST_PAGE}" icon="sap-icon://open-command-field" visible="true"></Button>
				</HBox>
				<ToolbarSpacer/>
				<Button text="{i18n>Approve}" type="Accept" press="onApprove"/>
				<Button text="{i18n>REJECT}" type="Reject" press="onReject"/>
				<ToolbarSpacer width="2rem">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToolbarSpacer>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>