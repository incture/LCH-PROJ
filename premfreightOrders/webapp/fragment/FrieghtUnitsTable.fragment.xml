<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:ExtPicker="com.incture.lch.premfreightOrders.control"
	xmlns:core="sap.ui.core" xmlns:ui="sap.ui.table">
	<ui:Table id="premfreightstable" rows="{mCommon>/aPremfreightorders}" visibleRowCountMode="Fixed" alternateRowColors="true"
		enableColumnReordering="false" class="sapUiMediumMarginBegin sapUiSmallMarginEnd sapUiTableNoColBorders" selectionMode="None">
		<ui:columns>
			<ui:Column tooltip="{i18n>ORDER_ID}" width="10rem" sorted="true" sortProperty="{mCommon>adhocOrderId}">
				<Label text="{i18n>ORDER_ID}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>orderId}" tooltip="{mCommon>orderId}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>REASON_CODE}">
				<Label text="{i18n>REASON_CODE}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>reasonCode}" tooltip="{mCommon>reasonCode}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>ORIGIN_NAME}">
				<Label text="{i18n>ORIGIN_NAME}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>originName}" tooltip="{mCommon>originName}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>DESTINATION_NAME}">
				<Label text="{i18n>DESTINATION_NAME}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>destinationName}" tooltip="{mCommon>destinationName}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CREATED_DATE}" visible="{mCommon>/visible/createdDate}">
				<Label text="{i18n>CREATED_DATE}" design="Bold"/>
				<ui:template>
					<Text maxLines="1"
						text="{path:'mCommon>createdDate', type:'sap.ui.model.type.DateTime', formatOptions: {source: { pattern: 'yyyy-MM-dd HH:mm:ss' },pattern: 'dd MMM yyyy', strictParsing: true}}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>STATUS}">
				<Label text="{i18n>STATUS}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>status}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CARRIER}" hAlign="Begin" visible="{mCommon>/visible/carrierCombo}">
				<Label text="{i18n>CARRIER}" design="Bold"/>
				<ui:template>
					<ComboBox selectedKey="{mCommon>selectedCarrier}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="true" filterSecondaryValues="true"
						items="{path: 'mCommon>/aCarrierdetails'}" change="onChangeCarrier" valueState="{mCommon>/valstate/carrier}">
						<core:ListItem key="{mCommon>bpNumber}" text="{mCommon>bpNumber}" additionalText="{mCommon>carrierDetails}"
							tooltip="{mCommon>carrierDetails}"/>
					</ComboBox>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CARRIER}" hAlign="Begin" visible="{mCommon>/visible/carrierText}">
				<Label text="{i18n>CARRIER}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>bpNumber}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CARRIER_MODE}" hAlign="Begin" visible="{mCommon>/visible/carrierCombo}">
				<Label text="{i18n>CARRIER_MODE}" design="Bold"/>
				<ui:template>
					<ComboBox selectedKey="{mCommon>selectedCarriermode}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
						items="{path: 'mCommon>/aCarriermodes'}" change="onChangeCBox" enabled="{mCommon>enablecarriermode}">
						<core:ListItem key="{mCommon>mode}" text="{mCommon>mode}" tooltip="{mCommon>mode}"/>
					</ComboBox>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CARRIER_MODE}" hAlign="Begin" visible="{mCommon>/visible/carrierText}">
				<Label text="{i18n>CARRIER_MODE}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>carrierMode}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CARRIER_SCAC}" visible="{mCommon>/visible/carrierScac}">
				<Label text="{i18n>CARRIER_SCAC}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>carrierScac}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CARRIER_DETAILS}" visible="{mCommon>/visible/carrierDetails}">
				<Label text="{i18n>CARRIER_DETAILS}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>carrierDetails}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>COST}">
				<Label text="{i18n>COST}" design="Bold"/>
				<ui:template>
					<Input value="{mCommon>charge}" enabled="{mCommon>/enable/costInput}"></Input>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>ACTION}">
				<Label text="{i18n>ACTION}" design="Bold"/>
				<ui:template>
					<HBox>
						<Button icon="sap-icon://customer-financial-fact-sheet" tooltip="{i18n>FORW_CA}" press="onGetCost"
							visible="{mCommon>/visible/bCarrierAdmin}" enabled="{mCommon>bCarrierAdmin}"/>
						<Button icon="sap-icon://manager" tooltip="{i18n>FORW_MANAGER}" press="onCost" visible="{mCommon>/visible/bManager}"
							enabled="{mCommon>/enable/bManager}"/>
						<Button icon="sap-icon://activity-individual" tooltip="{i18n>FORW_PLAN}" press="onCost" visible="{mCommon>/visible/bPlanner}"
							enabled="{mCommon>/enable/bPlanner}"/>
						<Button icon="sap-icon://accept" tooltip="{i18n>APPROVE}" press="onApprove" visible="{mCommon>/visible/bApprove}"
							enabled="{mCommon>/enable/bApprove}"/>
						<Button icon="sap-icon://decline" tooltip="{i18n>REJECT}" type="Reject" press="onReject" visible="{mCommon>/visible/bReject}"
							enabled="{mCommon>/enable/bReject}"/></HBox>
				</ui:template>
			</ui:Column>
		</ui:columns>
	</ui:Table>
</core:FragmentDefinition>