<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:ui="sap.ui.table">
	<Dialog showHeader="false" contentHeight="100%" contentWidth="50%" afterClose="onAfterCloseFuCustomize" verticalScrolling="false"
		horizontalScrolling="false">
		<content>
			<ui:Table rows="{mPartModel>/tabCust/columns}" selectionMode="None" visibleRowCountMode="Auto" alternateRowColors="true"
				enableColumnReordering="false" class="sapUiSizeCompact sapUiMediumMarginBegin sapUiMediumMarginEnd sapUiTableNoColBorders">
				<ui:extension>
					<Toolbar>
						<ToolbarSpacer/>
						<Title text="{i18n>COUSTOMIZATION}" level="H2"/>
						<ToolbarSpacer/>
						<!--<core:Icon src="sap-icon://sys-cancel" tooltip="{i18n>CANCEL}" press="onCloseTabCustom"/>-->
					</Toolbar>
				</ui:extension>
				<ui:columns>
					<ui:Column>
						<Label text="{i18n>COLUMN_DESC}" tooltip="{i18n>COLUMN_DESCRIPTION}" design="Bold"/>
						<ui:template >
							<Text text="{path:'mPartModel>columnName',formatter:'.fnGetColDesc'}"/>
						</ui:template>
					</ui:Column>
					<ui:Column width="5rem">
						<Label text="{i18n>VISIBLE}" tooltip="{i18n>VISIBLE_DESCRIPTION}" design="Bold"/>
						<ui:template>
							<!--type="AcceptReject"-->
							<Switch state="{mPartModel>isVisible}" enabled="{= ${mPartModel>isMandatory} ? false : true}" customTextOn="{i18n>YES}"
								customTextOff="{i18n>NO}" class="sapMSwitch"/>
						</ui:template>
					</ui:Column>
					<ui:Column width="5rem" sortProperty="sequence">
						<Label text="{i18n>ORDER}" tooltip="{i18n>ORDER_DESCRIPTION}" design="Bold"/>
						<ui:template >
							<Input value="{mPartModel>sequence}" name="CUST_ORDER_DESCRIPTION" enabled="{mPartModel>isEditable}" maxLength="2" change="fnNumberOnlyLiveChange"/>
						</ui:template>
					</ui:Column>
				</ui:columns>
			</ui:Table>
		</content>
		<buttons class="sapUiSizeCompact">
			<Button text="{i18n>CANCEL}" press="onCancelFuCutomize" type="Transparent" class="sapUiMCancleBtn sapUiSizeCompact"/>
			<Button icon="sap-icon://reset" text="{i18n>RESET_DEFAULT}" class="sapUiSizeCompact" type="Reject" visible="false" press="onResetCustomization"/>
			<Button icon="sap-icon://save" text="{i18n>SAVE_CHANGES}" class="sapUiSizeCompact" type="Accept" press="onSaveCustomization"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>