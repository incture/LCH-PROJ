<mvc:View controllerName="com.incture.lch.Accountant.controller.App" xmlns:ui="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.f" xmlns:core="sap.ui.core" height="100%" xmlns:semantic="sap.f.semantic">
	<App>
		<Page>
			<content>
				<HBox>
					<VBox width="20%">
						<List headerText="{i18n>PREMIUM_FO}" items="{mCommon>/aTaskList}">
							<CustomListItem>
								<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
									<Text text="{mCommon>subject}"/>
									<Link text="{mCommon>workflowInstanceId}" press="fnPremAccDetails"/>
									<Text text="{mCommon>workflowDefinitionId}"/>
									<Text text="{mCommon>recipientUsers}"/>
								</VBox>
							</CustomListItem>
						</List>
					</VBox>
					<VBox width="80%" class="sapUiSmallMarginTopBottom">
						<Title class="title" text="{i18n>FO_DETAILS}"></Title>
						<HBox>
							<VBox width="25%" class="sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>ORDER_ID}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/orderId}"></Input>
							</VBox>
							<VBox width="25%" class="sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>DEBIT_BY}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/debitBy}"></Input>
							</VBox>
							<VBox width="25%" class="sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>DEBIT_AMT}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/debitAmount}"></Input>
							</VBox>
						</HBox>
						<HBox>
							<VBox width="25%" class="sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>DEBIT_CURR}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/debitCurrency}"></Input>
							</VBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>QUANTITY}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/quantity}"></Input>
							</VBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>PRO_NUM}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/proNumber}"></Input>
							</VBox>
						</HBox>
						<HBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>TRAILER}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/trailerNumber}"></Input>
							</VBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>PLANNER_EMAIL}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/plannerEmail}"></Input>
							</VBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>DEBIT_POST_STATUS}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/debitPostStatus}"></Input>
							</VBox>
						</HBox>
						<HBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>DEBIT_TO}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/debitTo}"></Input>
							</VBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>GL_CODE}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/glCode}"></Input>
							</VBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>PROFIT_CENTER}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/profitCenter}"></Input>
							</VBox>
						</HBox>
						<HBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>CARRIER}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/carrier}"></Input>
							</VBox>
							<VBox width="25%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>TOTAL_COST}"></Label>
								<Input value="{mCommon>/oPremAccountingDetails/totalCost}"></Input>
							</VBox>
						</HBox>
						<HBox>
							<VBox width="100%" class=" sapUiMediumMarginBegin sapUiSmallMarginTopBottom">
								<Label text="{i18n>COMMENTS}"></Label>
								<TextArea width="75%" placeholder="Enter Comments here" value="{mCommon>/oPremAccountingDetails/comment}"></TextArea>
							</VBox>
						</HBox>
					</VBox>
				</HBox>
			</content>
			<footer>
				<OverflowToolbar class="customFooter">
					<ToolbarSpacer width="2rem">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow"/>
						</layoutData>
					</ToolbarSpacer>
					<Button text="{i18n>UPDATE}" type="Emphasized" press="fnUpdatePremAccDetails"  class = "sapUiSizeCompact"/>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
					<ToolbarSpacer/>
					<ToolbarSpacer/>
					<Button text="{i18n>REJECT}" type="Reject" press="fnCompleteAccountantTask('Rejected')" class = "sapUiSizeCompact"
					/>
					<Button text="{i18n>APPROVE}" type="Accept" press="fnCompleteAccountantTask('Approved')"  class = "sapUiSizeCompact"/>
					<ToolbarSpacer width="2rem">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow"/>
						</layoutData>
					</ToolbarSpacer>
				</OverflowToolbar>
			</footer>
		</Page>
	</App>
</mvc:View>