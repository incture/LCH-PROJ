<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:ExtPicker="com.incture.lch.premfreightOrders.control"
	xmlns:core="sap.ui.core" xmlns:ui="sap.ui.table">
	<ui:Table rows="{mCommon>/aPremfreightorders}" visibleRowCountMode="Fixed" alternateRowColors="true" enableColumnReordering="false"
		class="sapUiMediumMarginBegin sapUiSmallMarginEnd sapUiTableNoColBorders" selectionMode="MultiToggle">
		<ui:columns >
			<ui:Column tooltip="{i18n>ORDER_ID}" width="10rem" sorted = "true" sortProperty="{mCommon>adhocOrderId}">
				<Label text="{i18n>ORDER_ID}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>adhocOrderId}" tooltip="{mCommon>adhocOrderId}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>REASON_CODE}">
				<Label text="{i18n>REASON_CODE}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>premiumReasonCode}" tooltip="{mCommon>premiumReasonCode}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>ORIGIN_NAME}">
				<Label text="{i18n>ORIGIN_NAME}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>originName}" tooltip="{mCommon>originName}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>DESTINATION_NAME}">
				<Label text="{i18n>DESTINATION_NAME}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>destinationName}" tooltip="{mCommon>destinationName}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CREATED_DATE}">
				<Label text="{i18n>CREATED_DATE}" design="Bold"/>
				<ui:template>
					<Text maxLines="1"
						text="{path:'mCommon>createdDate', type:'sap.ui.model.type.DateTime', formatOptions: {source: { pattern: 'yyyy-MM-dd HH:mm:ss' },pattern: 'dd MMM yyyy', strictParsing: true}}"/>
				</ui:template>
			</ui:Column>
			<!--	<ui:Column tooltip="{i18n>EXP_DEL_DATE}">
				<Label text="{i18n>EXP_DEL_DATE}" design="Bold"/>
				<ui:template>
					<Text text="{mCommon>approverEmail}"/>
				</ui:template>
			</ui:Column>-->
			<ui:Column tooltip="{i18n>STATUS}">
				<Label text="{i18n>STATUS}" design="Bold"/>
				<ui:template>
					<Text maxLines="1" text="{mCommon>status}"/>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CARRIER}" hAlign="Begin">
				<Label text="{i18n>CARRIER}" design="Bold"/>
				<ui:template>
					<ComboBox selectedKey="{mCommon>selectedCarrier}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="true" filterSecondaryValues="true"
						items="{path: 'mCommon>/aCarrierdetails'}" change="onChangeCarrier">
						<core:ListItem key="{mCommon>bpNumber}" text="{mCommon>bpNumber}" additionalText="{mCommon>carrierDetails}"
							tooltip="{mCommon>carrierDetails}"/>
					</ComboBox>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>CARRIER_MODE}" hAlign="Begin">
				<Label text="{i18n>CARRIER_MODE}" design="Bold"/>
				<ui:template>
					<ComboBox selectedKey="{mCommon>selectedCarriermode}" class="sapUiMInputBoxBorderRadius" showSecondaryValues="false"
						items="{path: 'mCommon>/aCarriermodes'}" change="onChangeCBox" enabled="{mCommon>/enable/carrierMode}">
						<core:ListItem key="{mCommon>mode}" text="{mCommon>mode}"  tooltip="{mCommon>mode}"/>
					</ComboBox>
				</ui:template>
			</ui:Column>
			<ui:Column tooltip="{i18n>COST}">
				<Label text="{i18n>COST}" design="Bold"/>
				<ui:template>
					<Input value="" enabled="false"></Input>
				</ui:template>
			</ui:Column>
		</ui:columns>
	</ui:Table>
</core:FragmentDefinition>